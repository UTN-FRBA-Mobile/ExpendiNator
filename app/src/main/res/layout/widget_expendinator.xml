<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- Header con tÃ­tulo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ’° Expendinator"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- BotÃ³n escanear con estilo mejorado -->
    <LinearLayout
        android:id="@+id/widget_scan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_scan_background"
        android:padding="14dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¸  Escanear Recibo"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <!-- Resumen con cards mejoradas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Card Hoy -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Hoy"
                android:textSize="11sp"
                android:textColor="#A0A0C0"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/widget_total_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Card Semana -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginStart="6dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Semana"
                android:textSize="11sp"
                android:textColor="#A0A0C0"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/widget_total_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- Ãšltimos gastos mejorado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:padding="14dp"
        android:orientation="vertical"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ• Ãšltimos Gastos"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#A0A0C0"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/widget_expense_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="3dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/widget_expense_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="3dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/widget_expense_3"
